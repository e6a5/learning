# Environment Configuration Example
# Copy this file to .env and modify as needed

# Server Configuration
PORT=8080

# Database Configuration
DB_DSN=app_user:app_password@tcp(localhost:3307)/error_handling_db

# Redis Configuration  
REDIS_ADDR=localhost:6380

# Application Settings
LOG_LEVEL=info
APP_ENV=development

# Circuit Breaker Settings
DB_CIRCUIT_MAX_FAILURES=5
DB_CIRCUIT_RESET_TIMEOUT=30s
REDIS_CIRCUIT_MAX_FAILURES=3
REDIS_CIRCUIT_RESET_TIMEOUT=15s

# Retry Configuration
MAX_RETRY_ATTEMPTS=5
RETRY_BASE_DELAY=1s
RETRY_MAX_DELAY=30s

# Error Handling Settings
ENABLE_PANIC_RECOVERY=true
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_STACK_TRACES=false 